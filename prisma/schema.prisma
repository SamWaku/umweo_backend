// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
}

model Therapist{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  recordings Recordings[]
  tasks Tasks[]
}

model Recordings{
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  therapist Therapist @relation(fields: [therapistId],references: [id])
  therapistId Int
}

model Tasks{
  id Int @id @default(autoincrement())
  title String
  description String
  therapist Therapist @relation(fields: [therapistId],references: [id])
   therapistId Int
}

model Session{
  id Int @id @default(autoincrement())
  type String
  preference String
}

model Activity{
  id Int @id @default(autoincrement())
  name String
  title String
  description String
}

